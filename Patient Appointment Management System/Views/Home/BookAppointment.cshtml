@model Patient_Appointment_Management_System.ViewModels.BookAppointmentViewModel
@{
    Layout = null; // This page is self-contained
    ViewData["Title"] = "Book Appointment";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css">
    <style>
        body {
            background: linear-gradient(to bottom, #e3f2fd, #bbdefb);
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        .appointment-form {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .appointment-form:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            }

            .appointment-form h2 {
                margin-bottom: 20px;
                text-align: center;
                color: #007bff;
            }

        .form-label {
            font-weight: bold;
            color: #555;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

        .time-slot-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

            .time-slot-container .form-check {
                flex: 1 1 calc(50% - 10px); /* Adjust for 2 columns */
                margin-bottom: 0.5rem; /* Added for better spacing */
            }

        .navbar-custom {
            background-color: #007bff;
            padding: 1rem;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: white;
            }

                .navbar-custom .nav-link:hover {
                    color: #d1ecf1;
                }

        .text-danger { /* Standard Bootstrap class for validation messages */
            font-size: 0.875em;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Patient" asp-action="PatientDashboard">Patient Portal</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavBookAppointment">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavBookAppointment">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Patient" asp-action="PatientDashboard">Back to Dashboard</a>
                    </li>
                    @* Simple Logout (if user is logged in) - You might have a more robust session check *@
                    @if (Context.Session.GetString("PatientLoggedIn") == "true")
                    {
                        <li class="nav-item">
                            <form asp-controller="Patient" asp-action="PatientLogout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="nav-link btn btn-link" style="color: white; text-decoration: none; padding: 0.5rem 1rem;">Logout</button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-7 appointment-form">
                <h2><i class="bi bi-calendar-plus me-2"></i>Book an Appointment</h2>
                <hr class="mb-4">

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }


                <form asp-controller="Patient" asp-action="BookAppointment" method="post" id="appointmentForm">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="DoctorId" class="form-label"></label>
                        <select asp-for="DoctorId" asp-items="Model.DoctorsList" class="form-select">
                            <option value="">-- Select a Doctor --</option>
                        </select>
                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AppointmentDate" class="form-label"></label>
                        <input asp-for="AppointmentDate" type="date" class="form-control" id="appointmentDate" />
                        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TimeSlot" class="form-label"></label>
                        <div class="time-slot-container">
                            @if (Model.AvailableTimeSlots != null)
                            {
                                foreach (var slot in Model.AvailableTimeSlots)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" asp-for="TimeSlot" id="slot_@slot.Replace(" ","").Replace(":","").Replace("-","")" value="@slot">
                                        <label class="form-check-label" for="slot_@slot.Replace(" ","").Replace(":","").Replace("-","")">@slot</label>
                                    </div>
                                }
                            }
                            else
                            {
                                <p>No time slots available.</p>
                            }
                        </div>
                        <span asp-validation-for="TimeSlot" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Issue" class="form-label"></label>
                        <textarea asp-for="Issue" class="form-control" rows="3" placeholder="Please describe your medical issue briefly"></textarea>
                        <span asp-validation-for="Issue" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle me-1"></i>Request Appointment</button>
                    <a asp-controller="Patient" asp-action="PatientDashboard" class="btn btn-secondary btn-sm ms-2 float-end">
                        <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
                    </a>
                </form>
            </div>
        </div>
    </div>

    <footer class="text-center p-3 mt-5" style="background-color: rgba(0,0,0,0.05);">
        &copy; @DateTime.Now.Year HS Hospital. All rights reserved.
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @* Include jQuery Validate and Unobtrusive for client-side validation (optional but recommended) *@
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            // Get the current date in YYYY-MM-DD format
            const today = new Date().toISOString().split('T')[0];

            // Set the minimum date for the appointment date input to today
            $("#appointmentDate").attr("min", today);

            // Prevent manual input in the date field (optional, date type usually handles this well)
            $("#appointmentDate").on("keydown", function (event) {
                // Allow navigation keys like Tab, Backspace, Delete, Arrow keys
                if (event.key.length === 1 && !event.ctrlKey && !event.altKey && !event.metaKey) {
                     event.preventDefault(); // Prevent direct typing
                }
            });

            $("#appointmentDate").on("paste", function (event) {
                event.preventDefault();
            });

            // The form will now submit to the server.
            // Client-side validation will be handled by jQuery Unobtrusive Validation if included.
            // The "Please select a time slot" issue should be resolved because:
            // 1. `asp-for="TimeSlot"` correctly sets the `name` attribute for all radio buttons.
            // 2. The `[Required]` attribute on `BookAppointmentViewModel.TimeSlot` will be enforced
            //    by server-side validation and client-side unobtrusive validation.
        });
    </script>
</body>
</html>