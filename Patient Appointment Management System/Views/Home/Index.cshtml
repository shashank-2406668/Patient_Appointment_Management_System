@{
    ViewData["Title"] = "HS Hospital Bangalore - Welcome";
}

@section Styles {
    <style>
        /* Your existing, working styles including @@keyframes */
        body {
            background: linear-gradient(to bottom, #f8f9fa, #e9ecef);
        }

        .hero-section {
            background: linear-gradient(135deg, #007bff, #6610f2);
            color: white;
            padding: 50px 20px;
            border-radius: 8px;
            margin-top: 20px;
            text-align: center;
            animation: fadeIn 2s ease-in-out;
        }

            .hero-section h1 {
                font-size: 2.5rem;
                font-weight: bold;
            }

            .hero-section p {
                font-size: 1.2rem;
            }

        .login-card {
            width: 100%;
            max-width: 350px;
            margin: 20px auto;
            border: none;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .login-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
            }

        .card-body {
            padding: 20px;
            text-align: center;
        }

        .login-button {
            width: 100%;
            padding: 12px;
            font-size: 1.1rem;
            border-radius: 6px;
            margin-bottom: 10px;
        }

        .carousel-item img {
            height: 300px;
            object-fit: cover;
            border-radius: 8px;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }
    </style>
}

<!-- HERO SECTION - WORKING -->
<div class="hero-section">
    <h1>Welcome to HS Hospital Bangalore</h1>
    <p class="lead">Your trusted partner in health and well-being.</p>
</div>

<!-- CAROUSEL - WORKING -->
<div id="hospitalCarousel" class="carousel slide mt-4" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://images.pexels.com/photos/1692693/pexels-photo-1692693.jpeg?cs=srgb&dl=pexels-tomfisk-1692693.jpg&fm=jpg" class="d-block w-100" alt="Facilities">
        </div>
        <div class="carousel-item">
            <img src="https://plus.unsplash.com/premium_photo-1681966826227-d008a1cfe9c7?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="d-block w-100" alt="Doctors">
        </div>
        <div class="carousel-item">
            <img src="https://i.pinimg.com/736x/c6/7c/c1/c67cc114fc289a3eacc442da873053b2.jpg" class="d-block w-100" alt="Care">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#hospitalCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#hospitalCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- ADD THIS LOGIN CARDS HTML: -->
<!-- NEW LOGIN DROPDOWN SECTION -->
<div class="row justify-content-center text-center mt-4 mb-5">
    <!-- Added text-center and mb-5 for spacing -->
    <div class="col-md-6">
        <!-- Adjust col size as needed -->
        <div class="dropdown">
            <button class="btn btn-primary btn-lg dropdown-toggle" type="button" id="loginDropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                Access Portal
            </button>
            <ul class="dropdown-menu" aria-labelledby="loginDropdownMenuButton">
                <li>
                    <a class="dropdown-item" asp-controller="Patient" asp-action="PatientLogin">
                        <i class="bi bi-person-fill me-2"></i> Patient Login  <!-- Optional: Bootstrap Icon -->
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Doctor" asp-action="DoctorLogin">
                        <i class="bi bi-heart-pulse-fill me-2"></i> Doctor Login <!-- Optional: Bootstrap Icon -->
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item" asp-controller="Admin" asp-action="AdminLogin">
                        <i class="bi bi-person-gear me-2"></i> Admin Login   <!-- Optional: Bootstrap Icon -->
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>