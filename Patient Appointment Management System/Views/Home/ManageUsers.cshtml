@model Patient_Appointment_Management_System.ViewModels.AdminManageUsersViewModel
@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <!-- START: Updated Header with Buttons -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        <div class="btn-group" role="group" aria-label="User management actions">
            <a asp-action="AddDoctor" asp-controller="Admin" class="btn btn-success shadow-sm">
                <i class="fas fa-user-md fa-sm text-white-50"></i> Add New Doctor
            </a>
            @* You can uncomment this later when you implement Add Patient functionality
            <a asp-action="AddPatient" asp-controller="Admin" class="btn btn-info shadow-sm">
                <i class="fas fa-user-plus fa-sm text-white-50"></i> Add New Patient
            </a>
            *@
            <a asp-action="AddAdmin" asp-controller="Admin" class="btn btn-primary shadow-sm">
                <i class="fas fa-user-shield fa-sm text-white-50"></i> Add New Admin
            </a>
        </div>
    </div>
    <!-- END: Updated Header with Buttons -->
    <!-- START: Unified TempData Message Check -->
    @if (TempData["UserManagementMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["UserManagementMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["AdminManagementError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["AdminManagementError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <!-- END: Unified TempData Message Check -->
    <!-- START: Doctors List Card (replaces the placeholder) -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-success">Doctors List</h6>
        </div>
        <div class="card-body">
            @if (Model.Doctors != null && Model.Doctors.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover" id="doctorsTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Specialization</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doctor in Model.Doctors)
                            {
                                <tr>
                                    <td>@doctor.DoctorId</td>
                                    <td>@Html.DisplayFor(modelItem => doctor.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => doctor.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => doctor.Phone)</td>
                                    <td>@Html.DisplayFor(modelItem => doctor.Specialization)</td>
                                    <td class="text-center">
                                        <span class="text-muted">(Edit/Delete to be added)</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    No doctors found in the system. You can add one using the "Add New Doctor" button above.
                </div>
            }
        </div>
    </div>
    <!-- END: Doctors List Card -->
    <!-- Administrators List Card (Unchanged) -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Administrators List</h6>
        </div>
        <div class="card-body">
            @if (Model.Admins != null && Model.Admins.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover" id="adminsTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var admin in Model.Admins)
                            {
                                <tr>
                                    <td>@admin.AdminId</td>
                                    <td>@Html.DisplayFor(modelItem => admin.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => admin.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => admin.Role)</td>
                                    <td class="text-center">
                                        <span class="text-muted">(Edit/Delete to be added)</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    No administrators found in the system. You can add one using the "Add New Admin" button above.
                </div>
            }
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @* If you use DataTables, you can initialize it for the new doctors table as well *@
    <script>
        // Optional: If you use DataTables, initialize it for both tables
        // $(document).ready(function () {
        //     $('#adminsTable').DataTable();
        //     $('#doctorsTable').DataTable();
        // });
    </script>
}