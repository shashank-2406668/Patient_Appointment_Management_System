@{
    Layout = null;
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f0f8ff;
        }

        .nav-tabs .nav-link.active {
            background-color: #007bff;
            color: white;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    @* ... (rest of your AdminDashboard.cshtml) ... *@
    <nav class="navbar navbar-expand-lg navbar-light bg-primary p-3">
        <div class="container-fluid">
            <a class="navbar-brand text-white" asp-controller="Admin" asp-action="AdminDashboard">Admin Portal</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAdmin">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAdmin">
                <ul class="navbar-nav me-auto">
                    @* VVV UPDATE THIS LINK VVV *@
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Admin" asp-action="AdminManagement">
                            <i class="bi bi-gear me-2"></i>Manage Admin
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <form method="post" asp-controller="Admin" asp-action="AdminLogout" id="logoutFormAdmin" class="d-inline">
                            @Html.AntiForgeryToken() @* Good to add this *@
                            <button type="submit" class="nav-link btn btn-link text-white" style="display: inline; border: none; padding: 0; background: none;">
                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @* ... (rest of your AdminDashboard.cshtml) ... *@

    <div class="container my-5">
        <h1 class="text-center text-primary mb-4">Admin Dashboard</h1>

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">
                @ViewBag.SuccessMessage
            </div>
        }

        <!-- Your existing tab structure and content from the dashboard HTML -->
        <ul class="nav nav-tabs" id="dashboardTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="patients-tab" data-bs-toggle="tab" data-bs-target="#patients" type="button" role="tab">Registered Patients</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="doctors-tab" data-bs-toggle="tab" data-bs-target="#doctors" type="button" role="tab">Registered Doctors</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="logs-tab" data-bs-toggle="tab" data-bs-target="#logs" type="button" role="tab">System Logs</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="conflicts-tab" data-bs-toggle="tab" data-bs-target="#conflicts" type="button" role="tab">Conflicts</button>
            </li>
        </ul>
        <div class="tab-content mt-4" id="dashboardTabsContent">
            <div class="tab-pane fade show active" id="patients" role="tabpanel">
                <div class="card">
                    <div class="card-header">Registered Patients</div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead><tr><th>Name</th><th>Phone</th><th>Email</th><th>Login Time</th><th>Logout Time</th></tr></thead>
                            <tbody id="patients-table"></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="doctors" role="tabpanel">
                <div class="card">
                    <div class="card-header">Registered Doctors</div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead><tr><th>Name</th><th>Phone</th><th>Email</th><th>Login Time</th><th>Logout Time</th></tr></thead>
                            <tbody id="doctors-table"></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="logs" role="tabpanel">
                <div class="card">
                    <div class="card-header">System Logs</div>
                    <div class="card-body">
                        <ul id="system-logs" class="list-unstyled"><li>No logs available</li></ul>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="conflicts" role="tabpanel">
                <div class="card">
                    <div class="card-header">Scheduling Conflicts</div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead><tr><th>Patient Name</th><th>Doctor Name</th><th>Conflict Details</th><th>Actions</th></tr></thead>
                            <tbody id="conflicts-table"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Your Resolve Conflict Modal HTML here -->
    <div class="modal fade" id="resolveConflictModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="resolveConflictModalLabel">Resolve Conflict</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Patient Name:</strong> <span id="conflict-patient"></span></p>
                    <p><strong>Doctor Name:</strong> <span id="conflict-doctor"></span></p>
                    <p><strong>Conflict Details:</strong> <span id="conflict-details"></span></p>
                    <p>Do you want to cancel this appointment?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" id="cancelAppointmentButton">Cancel Appointment</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Your existing JavaScript to populate tables with sample data
        $(document).ready(function () {
            const data = {
                 patients: [
                    { name: "John Doe", phone: "1234567890", email: "john@example.com", login: "10:00 AM", logout: "2:00 PM" },
                    { name: "Alice Brown", phone: "9876543210", email: "alice@example.com", login: "9:00 AM", logout: "1:00 PM" }
                ],
                doctors: [
                    { name: "Dr. Jane Smith", phone: "5551234567", email: "jane@example.com", login: "8:00 AM", logout: "12:00 PM" },
                    { name: "Dr. Bob White", phone: "5559876543", email: "bob@example.com", login: "11:00 AM", logout: "3:00 PM" }
                ],
                systemLogs: [
                    "Patient John Doe logged in.",
                    "Doctor Jane Smith logged out.",
                    "New patient registered: Alice Brown."
                ],
                conflicts: [
                    { patient: "John Doe", doctor: "Dr. Jane Smith", details: "Overlapping appointment at 10:30 AM" },
                    { patient: "Alice Brown", doctor: "Dr. Bob White", details: "Double booking at 11:00 AM" }
                ]
            };
            // Populate patients table
            const patientsTable = $('#patients-table');
            data.patients.forEach(patient => {
                patientsTable.append(`<tr><td>${patient.name}</td><td>${patient.phone}</td><td>${patient.email}</td><td>${patient.login}</td><td>${patient.logout}</td></tr>`);
            });
            const doctorsTable = $('#doctors-table');
            data.doctors.forEach(doctor => {
                doctorsTable.append(`<tr><td>${doctor.name}</td><td>${doctor.phone}</td><td>${doctor.email}</td><td>${doctor.login}</td><td>${doctor.logout}</td></tr>`);
            });
            const logsContainer = $('#system-logs');
            logsContainer.empty();
            data.systemLogs.forEach(log => {
                logsContainer.append(`<li>${log}</li>`);
            });
            const conflictsTable = $('#conflicts-table');
            data.conflicts.forEach((conflict, index) => {
                conflictsTable.append(`<tr><td>${conflict.patient}</td><td>${conflict.doctor}</td><td>${conflict.details}</td><td><button class="btn btn-primary btn-sm resolve-btn" data-index="${index}" data-bs-toggle="modal" data-bs-target="#resolveConflictModal">Resolve</button></td></tr>`);
            });

            // Handle Resolve button click for conflicts
            $(document).on('click', '.resolve-btn', function () {
                const conflictIndex = $(this).data('index');
                const conflict = data.conflicts[conflictIndex];
                $('#conflict-patient').text(conflict.patient);
                $('#conflict-doctor').text(conflict.doctor);
                $('#conflict-details').text(conflict.details);
                $('#cancelAppointmentButton').off('click').on('click', function () {
                    alert(`Appointment between ${conflict.patient} and ${conflict.doctor} has been canceled.`);
                    $('#resolveConflictModal').modal('hide');
                    conflictsTable.find(`.resolve-btn[data-index="${conflictIndex}"]`).closest('tr').remove();
                });
            });
        });
    </script>
</body>
</html>