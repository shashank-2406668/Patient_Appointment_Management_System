@model Patient_Appointment_Management_System.ViewModels.ChangePasswordViewModel

<form asp-controller="Patient" asp-action="ChangePassword" method="post" id="changePasswordForm">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" data-formtarget="password"></div>

    <div class="mb-3">
        <label asp-for="CurrentPassword" class="form-label"></label>
        <input asp-for="CurrentPassword" type="password" class="form-control" />
        <span asp-validation-for="CurrentPassword" class="field-validation-error"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NewPassword" class="form-label"></label>
        <input asp-for="NewPassword" type="password" class="form-control" />
        <span asp-validation-for="NewPassword" class="field-validation-error"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmNewPassword" class="form-label"></label>
        <input asp-for="ConfirmNewPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmNewPassword" class="field-validation-error"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary w-100"><i class="bi bi-key me-1"></i>Update Password</button>
    </div>
</form>